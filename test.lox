fun fib(n) {
    if (n <= 1) return n;
    return fib(n - 2) + fib(n - 1);
}

print "Fibonacci sequence";
for (var i = 0; i < 20; i = i + 1) {
    print fib(i);
}


fun makeCounter() {
    var i = 0;

    fun count() {
        i = i + 1;
        return i;
    }

    return count;
}

var counter = makeCounter();

print "Counter closure";
print counter(); // 1
print counter(); // 2

