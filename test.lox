var greeting = "Hello, world!";

fun greet() {
    print greeting;
}

greet();

fun fib(n) {
    if (n <= 1) return n;
    return fib(n - 2) + fib(n - 1);
}

print "Fibonacci sequence";
for (var i = 0; i < 20; i = i + 1) {
    print fib(i);
}

fun makeCounter() {
    var i = 0;

    fun count() {
        i = i + 1;
        return i;
    }

    return count;
}

print "Counter closure";
var counter = makeCounter();
print counter(); // 1
print counter(); // 2

print "Closure snapshot";
var a = "global";
{
    fun showA() {
        print a;
    }

    showA(); // global
    var a = "local";
    showA(); // global
    print a; // local
}
